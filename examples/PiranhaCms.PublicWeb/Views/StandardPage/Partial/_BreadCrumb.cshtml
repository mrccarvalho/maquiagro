@model Guid
@{
    var crumbs = PiranhaCMS.ContentTypes.Helpers.SitemapHelper.GetBreadcrumbs(WebApp);

        var currentpage = PiranhaCMS.ContentTypes.Helpers.PageHelpers.GetCurrentPage();

         var parents = WebApp.Site.Sitemap.FindAll(x => x.HasChild(currentpage.Id));
}

<nav >
    <ul class="bread-crumb clearfix">
          <li><a href="/">Home</a></li>
        @foreach (var item in WebApp.Site.Sitemap.GetBreadcrumb(WebApp.PageId))
        {
        <li >
            @if (item.Id != WebApp.PageId)
                {
            <a href="@item.Permalink">@item.MenuTitle</a>
                }
                else
                {
            <span>@item.MenuTitle</span>
                }
        </li>
        }
    </ul>
</nav>

