@model IEnumerable<PiranhaCMS.PublicWeb.Models.ViewModels.ArticleListItem>

@foreach (var article in Model)
{
    <div class="col-xl-6 col-lg-12 col-md-6">
        <div class="blog-item">
            <div class="position-relative overflow-hidden">
                <img class="img-fluid" src="img/blog-1.jpg" alt="">
            </div>
            <div class="bg-secondary d-flex">
                <div class="flex-shrink-0 d-flex flex-column justify-content-center text-center bg-primary text-white px-4">
                    <span>@article.PublishedDate.ToString("dd")</span>
                    <h5 class="text-uppercase m-0">@article.PublishedDate.ToString("MMM")</h5>
                    <span>@article.PublishedDate.ToString("yyyy")</span>
                </div>
                <div class="d-flex flex-column justify-content-center py-3 px-4">
                    <div class="d-flex mb-2">
                        <small class="text-uppercase me-3"><i class="bi bi-bookmarks me-2"></i>Web Design</small>
                    </div>
                    <a class="h4" href="@article.Link">@article.Title</a>
                </div>
            </div>
        </div>
    </div>
}
